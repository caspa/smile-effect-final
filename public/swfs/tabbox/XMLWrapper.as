/*class: XMLWrapperauthor: Jean-Christophe Littfasscopyright: 2008description: Erstellt eine Verbindung zwischen der Gui und einer XML-Datei*/import mx.utils.Delegate;class XMLWrapper {	var loader:XMLParser;	var gui:Gui;	function XMLWrapper(src:String) {		trace("init xml-wrapper...");		this.loader = new XMLParser(src);		this.loader.xml.onLoad = Delegate.create(this, this.onLoad);		this.loader.load();		this.gui = null;	}	function onLoad(success) {		if (success) {			this.loader.parse(this.loader.data, this.loader.xml.firstChild);			if (this.loader.xml.loaded && (this.loader.xml.status == 0)) {				this.loader.loaded = true;				this.loader.tag = this.loader.xml.firstChild.nodeName;				this.gui = new Gui(this.loader);			}		} else {			trace("Error loading XML");		}	}}