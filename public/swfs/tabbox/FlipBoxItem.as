import mx.utils.Delegate;class FlipBoxItem {	var container:MovieClip;	var panel:MovieClip;	var loader:MultiImageLoader;	var img:MultiImage;	var src:String;	var url:String;	var id:Number;	public static var length=0;	var depth:Number;	var width:Number;	var height:Number;	function FlipBoxItem(loader:MultiImageLoader, container:MovieClip, url:String, src:String) {		this.set_id();		this.loader = loader;		this.container = container;		this.depth = this.container.getNextHighestDepth();		this.set_size(Stage.width,Stage.height);		this.panel = this.container.createEmptyMovieClip("flipboxitem_panel_"+this.id, this.depth);		this.hide();		this.url = url;		this.load(src);	}	function set_id() {		this.id = FlipBoxItem.length++;	}	function set_size(width:Number, height:Number) {		this.width = width;		this.height = height;	}	//PANEL	function move(x:Number, y:Number):Void {		this.panel._x = x;		this.panel._y = y;	}	function hide() {		this.panel._visible = false;		this.panel._xscale = 0;		this.panel._x = Stage.width/2;	}	function show() {		this.panel._xscale = 100;		this.panel._visible = true;		this.panel._x = 0;	}	//IMAGE	function load(src:String) {		this.src = src;		this.img = new MultiImage(this.loader, this.panel, this.src, 0, 0, this.width, this.height);	}}