/*class: XMLParserauthor: Jean-Christophe Littfasscopyright: 2008description: Lädt die Daten in ein Template Objekt*/class Gui {	public var root:MovieClip;	public var loader:XMLParser;	public var data:Object;	public var template;	public var height:Number;	function Gui(loader:XMLParser) {		this.loader = loader;		Util.html_object();		this.init();	}	public function init():Void {		if (this.loader.loaded) {			this.data = this.loader.data[this.loader.tag];			this.root = root ? root : _root;			this.config();			this.connect(this.loader.tag);			trace("init gui...");		} else {			trace("ERROR: Gui not loaded.");		}	}	public function config():Void {		Stage.scaleMode = "noScale";	}	public function connect(name:String):Void {		this.template = Templates.get(name);		this.template.connect(this);	}}