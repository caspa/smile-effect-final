class MusicBox {	var sounds:Array;	function MusicBox() {		this.sounds = new Array();	}	function add(name:String, id:String, vol:Number, pan:Number) {		this.sounds[name] = new Sound();		this.sounds[name].attachSound(id);		vol = vol ? vol : 75;		this.sounds[name].setVolume(vol);		pan = pan ? pan : 0;		this.sounds[name].setPan(pan);	}	function trigger(name:String, vol:Number, pan:Number ,to_stage:Boolean) {		this.sounds[name].start();		if (vol!=null) {			this.sounds[name].setVolume(vol);		}		if (pan!=null) {			if(to_stage){				pan=(-Stage.width/2+pan)/2;			}			this.sounds[name].setPan(pan);		}	}}